rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // attachments folder: read to anyone with URL, write only by authenticated with admin claim
    match /attachments/{entryId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // users: read by authenticated; write allowed if user writes their own doc OR admin
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == userId || request.auth.token.admin == true;
      allow delete: if request.auth.token.admin == true;
    }

    // prokers: public read; write only admin
    match /prokers/{doc} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

    // entries: read by authenticated; create only by admin (adjustable if you want wider write)
    match /entries/{doc} {
      allow read: if request.auth != null;
      allow create: if request.auth.token.admin == true;
      allow update, delete: if request.auth.token.admin == true;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
